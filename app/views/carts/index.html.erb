<% content_for :title, "Carts" %>

<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-md inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div id="carts" class="min-w-full">
    <% if @cart && @cart.line_items.any? %>
      <%= render @cart %>
    <% else %>
          <h2 class="text-center text-2xl text-white font-bold mb-4">Your cart is empty</h2>
    <% end %>
  </div>
</div>
