<% content_for :title, "Carts" %>

<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-md inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div id="carts" class="min-w-full">
    <% if @cart %>
      <%= render @cart %>
    <% else %>
      <p class="text-center my-10">No carts found.</p>
    <% end %>
  </div>
</div>
