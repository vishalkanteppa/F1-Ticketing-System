<fieldset data-payment-target="additionalFields" data-type="SEPA" class="mb-4 p-4">
    <div class="mb-4">
        <%= form.label :iban, class: "block text-sm font-medium text-white uppercase" %>
        <%= form.password_field :iban, class: "mt-1 block w-full border-gray-700 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm bg-gray-700", placeholder: "NL10 ABNA XXXX XXXX XX" %>
    </div>
    <div class="mb-4">
        <%= form.label :bic, class: "block text-sm font-medium text-white" %>
        <%= form.text_field :bic, class: "mt-1 block w-full border-gray-700 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm bg-gray-700", size: 9, placeholder: "e.g. ABNANL2A" %>
    </div>
</fieldset>